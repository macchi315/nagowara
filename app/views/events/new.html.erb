<h1>入力フォーム</h1>

<%= form_with(model: @event, local: true) do |form| %>

  <div class="live_name">
    <%= form.label :ライブ名 %>
    <%= form.text_field :live_name %>
  </div>

    <div class="time">
    <%= form.label :日時 %>
    <%= form.datetime_select :start_time %>
  </div>

  <div class="place">
    <%= form.label :会場 %>
    <%= form.text_field :place %>
  </div>

  <div class="guest">
    <%= form.label :出演者 %>
    <%= form.text_field :guest %>
  </div>

  <div class="price">
    <%= form.label :値段 %>
    <%= form.text_field :price %>
  </div>

  <%# 商品画像 %>
  <div class="img-upload">
    <div class="weight-bold-text">
    </div>
    <div class="click-upload">
      <%= form.file_field :image, id:"item-image" %>
    </div>
  </div>
  <%# /商品画像 %>

  <div class="submit">
    <%= form.submit %>
  </div>

<% end %>